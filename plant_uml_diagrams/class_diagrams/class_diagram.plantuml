' database classes '
class Database  << (S,#FF7700) Singleton >> {
    {method} write_ss()
    {method} write_data()
    {method} read_latest()
    {method} subscribe()
}

class ss  << (T,gold) Table >> {
    + data : blob
    + timestamp : DateTime
}
class data << (T,gold) Table >> {
