abstract class PendulumSimBase <<Abstract class>> {
    + dynamics()
    + step()
    + render()
    + draw()
    + update_plot()
    + show_final_plot()
}

class Pendulum extends PendulumSimBase {
    + dynamics()
    + draw()
}

class CartPendulum extends PendulumSimBase {
    + dynamics()
